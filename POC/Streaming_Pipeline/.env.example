# Azure EventHub Configuration
EVENTHUB_CONNECTION_STRING="Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=your-key-name;SharedAccessKey=your-key"
EVENTHUB_NAME="weather-data"
EVENTHUB_CONSUMER_GROUP="$Default"

# Azure Storage Configuration  
STORAGE_ACCOUNT_NAME="yourstorageaccount"
STORAGE_ACCOUNT_KEY="your-storage-account-key"
STORAGE_CONTAINER_NAME="streaming-data"

# Databricks Configuration
DATABRICKS_HOST="https://your-workspace.databricks.com"
DATABRICKS_TOKEN="your-databricks-token"
DATABRICKS_CLUSTER_ID="your-cluster-id"

# Pipeline Configuration
CHECKPOINT_LOCATION="/mnt/checkpoints/streaming-pipeline"
OUTPUT_LOCATION="/mnt/data/silver"
TRIGGER_INTERVAL="10 seconds"

# Monitoring and Logging
LOG_LEVEL="INFO"
ENABLE_METRICS="true"
PROMETHEUS_PORT="8000"

# Data Quality (DQX) Configuration
DQX_VALIDATION_ENABLED="true"
DQX_FAIL_ON_ERROR="false" 
DQX_METADATA_ENABLED="true"

# Performance Tuning
MAX_OFFSETS_PER_TRIGGER="1000"
MAX_FILES_PER_TRIGGER="100"
SHUFFLE_PARTITIONS="200"

# Development/Testing Overrides
# Uncomment for development
# LOG_LEVEL="DEBUG"
# ENABLE_METRICS="false"
# DQX_FAIL_ON_ERROR="true"